<div id="<%= dom_id location %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= location.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Address:</strong>
    <%= location.address %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Table limit:</strong>
    <%= location.table_limit %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Opening Time:</strong>
    <%= location.opening_time.strftime("%l:%M%p") %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Closing Time:</strong>
    <%= location.closing_time.strftime("%l:%M%p") %>
  </p>

</div>
